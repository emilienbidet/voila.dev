{
	"name": "@voila.dev/ui",
	"type": "module",
	"version": "1.0.2",
	"publishConfig": {
		"access": "public",
		"directory": "dist"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"build": "bun run build:styles && bun run build:themes && bun run build:components",
		"build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/globals.css",
		"build:themes": "bunx cpx2 'src/styles/themes/**/*.css' 'dist/styles/themes'",
		"build:components": "tsc",
		"check-types": "tsc --noEmit",
		"dev:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/globals.css --watch",
		"dev:themes": "bunx cpx2 'src/styles/themes/**/*.css' 'dist/styles/themes' --watch",
		"dev:components": "tsc --watch",
		"prepublishOnly": "bun run clean && bun run build"
	},
	"exports": {
		".": "./dist/index.js",
		"./icons": "./dist/icons.js",
		"./styles/globals.css": "./dist/styles/globals.css",
		"./styles/themes/*.css": "./dist/styles/themes/*.css",
		"./components/*": "./dist/components/*.js",
		"./hooks/*": "./dist/hooks/*.js"
	},
	"dependencies": {
		"@base-ui-components/react": "^1.0.0-beta.4",
		"@tailwindcss/cli": "catalog:ui",
		"@tanstack/react-table": "^8.21.3",
		"cmdk": "^1.1.1",
		"cva": "^1.0.0-beta.4",
		"embla-carousel-react": "^8.6.0",
		"input-otp": "^1.4.2",
		"lucide-react": "0.553.0",
		"react-day-picker": "^9.11.1",
		"react-resizable-panels": "^3.0.6",
		"recharts": "^3.3.0",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@types/react": "catalog:ui",
		"@types/react-dom": "catalog:ui",
		"@voila.dev/typescript-config": "workspace:^1.0.0",
		"tailwindcss": "catalog:ui",
		"typescript": "catalog:"
	},
	"peerDependencies": {
		"react": "catalog:ui",
		"react-dom": "catalog:ui",
		"tailwindcss": "catalog:ui"
	}
}
