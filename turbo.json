{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"format": {
			"dependsOn": ["^format"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:styles": {
			"cache": false,
			"persistent": true
		},
		"dev:themes": {
			"cache": false,
			"persistent": true
		},
		"dev:components": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"]
		},
		"build:styles": {
			"dependsOn": ["^build"]
		},
		"build:themes": {
			"dependsOn": ["^build"]
		},
		"build:components": {
			"dependsOn": ["^build"]
		}
	}
}
